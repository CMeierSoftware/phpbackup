<?xml version="1.0" encoding="utf-8"?>
<config>
    <backup>
        <database>
            <adapter>pdo_mysql</adapter>
            <host>localhost</host>
            <username>root</username>
            <password></password>
            <dbname>test</dbname>
        </database>
        <directory>
            <src>.</src>
            <exclude>.</exclude>
            <exclude>sub1</exclude>
            <exclude>./sub2/</exclude>
            <exclude>..</exclude>
        </directory>
        <settings>
            <executeEveryDays>5</executeEveryDays>
            <maxArchiveSize>5</maxArchiveSize>
            <encryptionKey>some_random_Key</encryptionKey>
            <keepBackupAmount>2</keepBackupAmount>
            <keepBackupDays>0</keepBackupDays>
        </settings>
    </backup>
    <remote>
        <local>
            <rootDir></rootDir>
        </local>
        <backblaze>
            <accountId>some_id</accountId>
            <applicationKey>some_key</applicationKey>
            <bucketName>some_name</bucketName>
        </backblaze>
    </remote>
</config>